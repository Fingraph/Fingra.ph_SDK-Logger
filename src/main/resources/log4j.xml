<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <!-- Appenders -->
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p: %c - %m%n" />
        </layout>
    </appender>

    <appender name="SDK_IPHONE_LOG" class="biz.minaret.log4j.DatedFileAppender">
        <param name="ImmediateFlush" value="true" />
        <param name="Append" value="true" />
        <param name="Directory" value="/home/hadoop/workspace_oss/Fingraph_SdkLogger/sdk_logs/"/>
        <param name="Prefix" value="WAS.sdk_iphone_log." />
        <param name="Suffix" value=".txt" />
        <param name="ScheduleType" value="DAILY" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%m%n"/>
        </layout>
    </appender>
    <appender name="SDK_ANDROID_LOG" class="biz.minaret.log4j.DatedFileAppender">
        <param name="ImmediateFlush" value="true" />
        <param name="Append" value="true" />
        <param name="Directory" value="/home/hadoop/workspace_oss/Fingraph_SdkLogger/sdk_logs/"/>
        <param name="Prefix" value="WAS.sdk_android_log." />
        <param name="Suffix" value=".txt" />
        <param name="ScheduleType" value="DAILY" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%m%n"/>
        </layout>
    </appender>

    <!-- Application Loggers -->
    <logger name="ph.fingra.sdklogger">
        <level value="info" />
    </logger>

    <!-- 3rdparty Loggers -->
    <logger name="org.springframework.core">
        <level value="info" />
    </logger>

    <logger name="org.springframework.beans">
        <level value="info" />
    </logger>

    <logger name="org.springframework.context">
        <level value="info" />
    </logger>

    <logger name="org.springframework.web">
        <level value="info" />
    </logger>

    <logger name="ph.fingra.sdklogger.util.LoggerHelperIphone">
        <level value="info"/>
        <appender-ref ref="SDK_IPHONE_LOG"/>
    </logger>
    <logger name="ph.fingra.sdklogger.util.LoggerHelperAndroid">
        <level value="info"/>
        <appender-ref ref="SDK_ANDROID_LOG"/>
    </logger>

    <!-- Root Logger -->
    <!--
    <root>
        <priority value="warn" />
        <appender-ref ref="console" />
    </root>
    -->

</log4j:configuration>
